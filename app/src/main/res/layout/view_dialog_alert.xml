<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_wait_dialog"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/alert_text_title"
        style="@style/MeatO_TextView.CenterAligned"
        android:textSize="@dimen/app_text_size_large"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/alert_text_message"
        style="@style/MeatO_TextView"
        android:textSize="@dimen/app_text_size_large"
        android:layout_margin="10dp"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/alert_button_close"
        style="@style/MeatO_Button_Flat_Text"
        android:text="@string/text_button_close"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>