<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_action_bar_size"
    android:background="@color/colorPrimary"
    app:popupTheme="@style/AppTheme.PopupOverlay"
    app:layout_scrollFlags="scroll|enterAlways">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/toolbar_text_app_name"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/app_text_size_title"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            android:shadowDy="3" android:shadowDx="3"
            android:shadowRadius="5" android:shadowColor="@color/colorShadow"/>

        <TextView
            android:id="@+id/toolbar_text_app_slogan"
            style="@style/MeatO_TextView.Small"
            android:text="@string/app_slogan"
            android:textColor="@color/colorSlogan"
            android:layout_below="@id/toolbar_text_app_name"
            android:layout_marginTop="-4dp"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>