<RelativeLayout android:id="@+id/fragment_login"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@mipmap/background">
    <LinearLayout
        android:id="@+id/login_view_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">
        <ImageView
            style="@style/MeatO_Image_Product_Login"
            android:src="@mipmap/mutton"/>

        <ImageView
            style="@style/MeatO_Image_Product_Login"
            android:src="@mipmap/chicken"/>

        <ImageView
            style="@style/MeatO_Image_Product_Login"
            android:src="@mipmap/ingredients"/>

        <ImageView
            style="@style/MeatO_Image_Product_Login"
            android:src="@mipmap/spices"/>

        <ImageView
            style="@style/MeatO_Image_Product_Login"
            android:src="@mipmap/dessert"/>
    </LinearLayout>

    <TextView
        android:id="@+id/login_name"
        style="@style/MeatO_TextView.Title.CenterAligned"
        android:text="@string/title_activity_login_welcome"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/login_view_products"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/vegan_food_filled"
            android:tint="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"/>

        <TextView
            style="@style/MeatO_TextView.Title.CenterAligned"
            android:textColor="@color/colorWhite"
            android:text="@string/app_name"
            android:textSize="40dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorWhite"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            style="@style/MeatO_TextView.CenterAligned"
            android:textColor="@color/colorWhite"
            android:text="@string/app_slogan"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_view_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:elevation="5dp">
        <LinearLayout
            android:id="@+id/login_button_login"
            style="@style/MeatO_View_Button_Scaled">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/google"
                android:layout_margin="10dp"
                android:clickable="false"/>
            <View
                style="@style/MeatO_View_Vertical_Divider" />
            <TextView
                style="@style/MeatO_TextView.Title.CenterAligned"
                android:text="@string/button_login_google_sign_in"
                android:layout_gravity="center"
                android:clickable="false"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
